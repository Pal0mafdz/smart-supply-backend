{
  "compilerOptions": {
    /* Paths */
    "rootDir": "./src",
    "outDir": "./dist",

    /* Language and Environment */
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",

    /* Interop */
    "esModuleInterop": true,
    "resolveJsonModule": true,

    /* Type Safety */
    "strict": true,
    "skipLibCheck": true,

    /* Source Maps */
    "sourceMap": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
